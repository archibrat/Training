def rgb(r, g, b):
        output = ''
        r = 0 if r < 0 else r
        g = 0 if g < 0 else g
        b = 0 if b < 0 else b
        r = 255 if r > 255 else r
        g = 255 if g > 255 else g
        b = 255 if b > 255 else b

        output += '{0:02X}'.format(r)
        output += '{0:02X}'.format(g)
        output += '{0:02X}'.format(b)
        return output
